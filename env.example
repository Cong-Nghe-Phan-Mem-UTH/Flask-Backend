# Database
# SQLite (default)
# DATABASE_URL=sqlite:///dev.db

# MSSQL (Microsoft SQL Server)
# Option 1: Using pyodbc (recommended, requires ODBC Driver)
# DATABASE_URL=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+17+for+SQL+Server
# DATABASE_URL=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# Option 2: Using pymssql (pure Python, easier to install)
# DATABASE_URL=mssql+pymssql://username:password@server:1433/database?charset=utf8

# PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# MySQL/MariaDB
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# Default (SQLite)
DATABASE_URL=sqlite:///dev.db

# JWT
ACCESS_TOKEN_SECRET=your-access-token-secret-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
GUEST_ACCESS_TOKEN_EXPIRES_IN=1h
GUEST_REFRESH_TOKEN_EXPIRES_IN=1d

# Initial Owner Account
INITIAL_EMAIL_OWNER=admin@order.com
INITIAL_PASSWORD_OWNER=123456

# Server
PORT=4000
DOMAIN=localhost
PROTOCOL=http
PRODUCTION=false
PRODUCTION_URL=
DOCKER=false

# Upload
UPLOAD_FOLDER=uploads

# Client
CLIENT_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_AUTHORIZED_REDIRECT_URI=http://localhost:4000/auth/login/google
GOOGLE_REDIRECT_CLIENT_URL=http://localhost:3000/login-success

# Other
SERVER_TIMEZONE=Asia/Ho_Chi_Minh
PAUSE_SOME_ENDPOINTS=false

# Flask
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=true

